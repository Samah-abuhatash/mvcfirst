@model Category

<h2>Edit Category</h2>

<form method="post" action="/Categories/Edit">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label for="C-Name" class="form-label">Category Name:</label>
        <input type="text" name="Name" class="form-control" id="C-Name"
               value="@Model.Name" placeholder="Enter the name of category">
    </div>

    <div class="mb-3">
        <label for="C-Desc" class="form-label">Description:</label>
        <input type="text" name="Description" class="form-control" id="C-Desc"
               value="@Model.description" placeholder="Enter the category description">
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
